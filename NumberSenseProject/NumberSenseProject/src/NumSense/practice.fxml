<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="NumSense.practiceController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text fx:id = "problem" text = "0 + 0 = " GridPane.columnIndex= "0" GridPane.columnSpan="4" GridPane.rowIndex = "1" visible = "false"/>
    <TextField fx:id = "input" text = "" GridPane.columnIndex="1" GridPane.rowIndex = "2" visible = "false" />
    <Button fx:id = "startButton" text = "GO!" GridPane.columnIndex="0" GridPane.rowIndex = "0" onAction="#handleStart"/>
    <Text fx:id = "result" GridPane.columnIndex="1" GridPane.rowIndex="3" />
</GridPane>